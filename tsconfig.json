{
  "extends": "@tsconfig/node16/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["**/*.spec.ts"]
}
